{
  "swagger": "2.0",
  "info": {
    "title": "Event Scheduler API",
    "description": "API for creating and managing community events.",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
  "/events": {
    "get": {
      "summary": "Get all events",
      "description": "Fetch all events from the database.",
      "operationId": "getAllEvents",
      "parameters": [
        {
          "in": "query",
          "name": "limit",
          "type": "integer",
          "required": false,
          "description": "Optional number of results to return."
        }
      ],
      "responses": {
        "200": { "description": "OK" },
        "500": { "description": "Internal Server Error" }
      }
    },
    "post": {
      "summary": "Create a new event",
      "description": "Adds a new event to the database.",
      "parameters": [
        {
          "in": "body",
          "name": "body",
          "required": true,
          "schema": { "$ref": "#/definitions/Event" }
        }
      ],
      "responses": {
        "201": { "description": "Created" },
        "400": { "description": "Bad Request" }
      }
    }
  },
  "/events/{id}": {
    "get": {
      "summary": "Get an event by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string",
          "example": "652fe97ac51f5b9a278f003c"
        }
      ],
      "responses": {
        "200": { "description": "OK" },
        "404": { "description": "Not Found" }
      }
    },
    "put": {
      "summary": "Update an event by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string"
        },
        {
          "in": "body",
          "name": "body",
          "required": true,
          "schema": { "$ref": "#/definitions/Any" }
        }
      ],
      "responses": {
        "200": { "description": "Updated" },
        "400": { "description": "Bad Request" }
      }
    },
    "delete": {
      "summary": "Delete an event by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "responses": {
        "200": { "description": "Deleted" },
        "404": { "description": "Not Found" }
      }
    }
  }
},
  "definitions": {
    "Event": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "Community Beach Cleanup"
        },
        "description": {
          "type": "string",
          "example": "Join us for a Saturday morning cleanup at the park!"
        },
        "date": {
          "type": "string",
          "example": "2025-11-05T09:00:00Z"
        },
        "location": {
          "type": "string",
          "example": "Ala Moana Beach Park"
        },
        "category": {
          "type": "string",
          "example": "Volunteer"
        },
        "capacity": {
          "type": "integer",
          "example": 50
        },
        "organizerId": {
          "type": "string",
          "example": "652fe97ac51f5b9a278f003c"
        }
      }
    }
  }
}